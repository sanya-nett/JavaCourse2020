<Configuration monitorInterval="30">
    <Appenders>
        <Console name="ConsoleHandler" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="%highlight{%d{dd/MM/yyyy HH:mm:ss.SSS} - %10p - %-30.36c{1} | %m%n}{FATAL=red blink, ERROR=red blink, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </Console>
        <File name="FileHandler" fileName="logs.log">
            <PatternLayout>
                <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
            </PatternLayout>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="ConsoleHandler" level="info"/>
            <AppenderRef ref="FileHandler" level="debug"/>
        </Root>
    </Loggers>
</Configuration>